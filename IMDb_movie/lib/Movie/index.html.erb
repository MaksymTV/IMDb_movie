<h1>Фільми</h1>

<table>
  <thead>
    <tr>
      <th>Назва</th>
      <th>Рік</th>
      <th>Жанр</th>
      <th>Режисер</th>
      <th>Актори</th>
      <th>Оцінка</th>
    </tr>
  </thead>

  <tbody>
    <% @movies.each do |movie| %>
      <tr>
        <td><%= movie.title %></td>
        <td><%= movie.year %></td>
        <td><%= movie.genre.name %></td>
        <td><%= movie.director.name %></td>
        <td><%= movie.actors.map(&:name).join(', ') %></td>
        <td><%= movie.rating %></td>
      </tr>
    <% end %>
  </tbody>
</table>
